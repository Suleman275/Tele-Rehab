:root {
	width: 100%;
	height: 100%;
	align-items: center;
	color: white;
}

.btn {
    border-radius: 24px;
    padding: 20px 40px;
    background-color: #2ec4b6;
    color: white;
    border-width: 0px;
    -unity-font-style: bold;
    transition: scale 0.2s linear;
    margin: 10px;
}

.btn:hover, .btn:focus {
    background-color: #ff9f1c;
    scale: 1.1;
}

.main {
    width: 100%;
	height: 100%;
	align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.5);
}